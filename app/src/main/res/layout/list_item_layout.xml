<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_columnWeight="0"
            android:layout_rowWeight="0"
            >

            <TextView
                android:id="@+id/palletIDLabelTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Pallet ID:"
                android:textSize="6pt"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/palletIDTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="122303"
                android:textSize="6pt"
                android:padding="5dp"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_columnWeight="0"
            android:layout_rowWeight="0"
            >

            <TextView
                android:id="@+id/skuLabelTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="SKU:"
                android:textSize="6pt"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/skuTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1001440809"
                android:textSize="6pt"
                android:padding="5dp"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_columnWeight="0"
            android:layout_rowWeight="0"
            >

            <TextView
                android:id="@+id/locationLabelTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Location:"
                android:textSize="6pt"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/locationTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="C-14-2"
                android:textSize="6pt"
                android:padding="5dp"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_columnWeight="0"
            android:layout_rowWeight="0"
            >

            <TextView
                android:id="@+id/quantityLabelTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Quantity:"
                android:textSize="6pt"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/quantityTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="140"
                android:textSize="6pt"
                android:padding="5dp"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/palletDeleteButton"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_gravity="center"
            android:background="@color/white"
            android:src="@drawable/ic_delete"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_columnWeight="0"
            android:layout_rowWeight="0"/>
    </GridLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="?android:attr/listDivider" />

</LinearLayout>